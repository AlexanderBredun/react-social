{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "ESNext",
      "target": "es5",
      "strict": true,
      "jsx": "react-jsx",
      "allowJs": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports" : true,
      "esModuleInterop" : true,
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "ts-node": {
        "compilerOptions": {
          "module": "CommonJS"
        }
      },
      "include":  ["./src/**/*", "./config/**/*"],
  }